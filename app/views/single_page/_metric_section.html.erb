<div class="metric-summary__<%= metric_name %>">
  <%= render 'metric_header', {
    metric_name: metric_name,
    value: total,
    show_trend: true,
    short_context: short_context
  }%>
</div>

<%= render 'chart', series: @performance_data.get_chart(metric_name) %>
<a href=<%=@performance_data.csv_url(metric_name)%> class="govuk-link" data-gtm="csv download">
  <%=t("single_page.metric_section.download_link", metric_name: @performance_data.human_friendly_metric(metric_name))%>
</a>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-one-half">
    <% if external_link %>
      <a href="<%= external_link %>" class="govuk-link govuk-body-s"><%= t "metrics.#{metric_name}.external_link" %></a>
    <% end %>
  </div>
</div>
